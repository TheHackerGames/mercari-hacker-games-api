                    {
                        "name": "body",
                        "in": "body",
                        "description": "MilitarySkill",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/MilitarySkill"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Skill created/matched"
                    },
                    "400": {
