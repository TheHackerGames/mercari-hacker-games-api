            "post": {
                "tags": [
                    "Jobs"
                ],
                "summary": "Get list of jobs",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "JobSearch",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/JobSearch"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List returned"
                    },
                    "400": {
                        "description": "Bad request"
                    }
                }
            }
        },
        "/militaries": {
            "get": {
                "tags": [
                    "Military"
                ],
